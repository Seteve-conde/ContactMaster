@model Dominio.Models.BonusModel
@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="mb-3">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Nome do contato">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Price" class="form-control" placeholder="Digite o valor">
        @Html.ValidationMessageFor(x => x.Price)
    </div> 

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Bonus" asp-action="Index" role="button">Voltar</a>
</form>